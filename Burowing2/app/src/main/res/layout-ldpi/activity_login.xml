<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="80dp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/pwdSigninTxt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="57dp"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="32dp"
        android:text="Email"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/errorAlertTv" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:text="Clear"
        app:layout_constraintStart_toStartOf="@+id/loginBtn"
        app:layout_constraintTop_toTopOf="@+id/loginBtn" />

    <EditText
        android:id="@+id/mailSignInTxt"
        android:layout_width="178dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/errorAlertTv"
        app:layout_constraintTop_toTopOf="@+id/errorAlertTv" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="171dp"
        android:layout_height="61dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoux" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="63dp"
        android:layout_height="19dp"

        android:layout_marginTop="76dp"
        android:text="Password"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <EditText
        android:id="@+id/pwdSigninTxt"
        android:layout_width="175dp"
        android:layout_height="20dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/mailSignInTxt"
        app:layout_constraintTop_toTopOf="@+id/mailSignInTxt" />

    <TextView
        android:id="@+id/errorAlertTv"
        android:layout_width="173dp"
        android:layout_height="15dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/ggSignInBtn"
        android:layout_width="169dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pwdSigninTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>